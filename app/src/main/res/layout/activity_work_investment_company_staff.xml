<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".work.WorkActivity_InvestmentCompanyStaff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <Button
            android:id="@+id/WorkActivity_InvestmentCompanyStaff_btn_OpeningMarket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주식시장 개시하기"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_margin="5dp"
            >

        </Button>

        <Button
            android:id="@+id/WorkActivity_InvestmentCompanyStaff_btn_BuyingStocks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주식 매수하기"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_margin="5dp"
            >

        </Button>

        <Button
            android:id="@+id/WorkActivity_InvestmentCompanyStaff_btn_SellingStocks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주식 매도하기"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_margin="5dp"
            >

        </Button>

        <Button
            android:id="@+id/WorkActivity_InvestmentCompanyStaff_btn_ClosingingMarket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주식시장 마감하기"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_margin="5dp"
            >

        </Button>

    </LinearLayout>

</LinearLayout>